<%= layout("/layouts/boilerplate") %>
<style>
    /* Form Container */
    .login-form-container {
        background: linear-gradient(145deg, #ffffff, #f8fafc);
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        margin: 3rem auto;
        max-width: 500px;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        position: relative;
        overflow: hidden;
    }

    /* Subtle decorative element */
    .login-form-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #10b981, #3b82f6);
        border-radius: 16px 16px 0 0;
    }

    /* Form Heading */
    .login-form-container h1 {
        font-size: 2rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 2rem;
        text-align: center;
        letter-spacing: -0.025em;
        background: linear-gradient(to right, #10b981, #1e293b);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    /* Form Labels */
    .form-label {
        font-size: 0.95rem;
        font-weight: 600;
        color: #475569;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        transition: color 0.2s ease;
    }

    .form-label::after {
        content: '*';
        color: #ef4444;
        font-size: 0.8rem;
        opacity: 0.8;
    }

    /* Form Inputs */
    .form-control {
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        padding: 0.85rem 1.25rem;
        font-size: 0.95rem;
        background-color: #f8fafc;
        transition: all 0.3s ease;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.05);
    }

    .form-control:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.15), inset 0 1px 2px rgba(0, 0, 0, 0.05);
        background-color: #ffffff;
        outline: none;
    }

    .form-control::placeholder {
        color: #94a3b8;
        font-style: italic;
    }

    /* Validation Feedback */
    .invalid-feedback {
        font-size: 0.85rem;
        color: #ef4444;
        margin-top: 0.25rem;
    }

    .form-control.is-invalid {
        border-color: #ef4444;
        background-color: #fef2f2;
    }

    /* Submit Button */
    .btn-success {
        background: linear-gradient(135deg, #10b981, #059669);
        border: none;
        padding: 0.85rem 2.5rem;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #ffffff;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
        transition: all 0.3s ease;
        display: block;
        margin: 2rem auto 0;
        position: relative;
        overflow: hidden;
    }

    .btn-success:hover {
        background: linear-gradient(135deg, #059669, #047857);
        box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
        transform: translateY(-2px);
    }

    .btn-success::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.2);
        transition: left 0.3s ease;
    }

    .btn-success:hover::after {
        left: 100%;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .login-form-container {
            padding: 1.75rem;
            margin: 2rem 1rem;
        }

        .login-form-container h1 {
            font-size: 1.75rem;
        }

        .form-control {
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
        }

        .btn-success {
            padding: 0.75rem 2rem;
            font-size: 0.95rem;
        }

        .form-label {
            font-size: 0.9rem;
        }
    }

    @media (max-width: 576px) {
        .login-form-container {
            padding: 1.25rem;
            margin: 1.5rem 0.5rem;
            border-radius: 12px;
        }

        .login-form-container h1 {
            font-size: 1.5rem;
        }

        .form-control {
            font-size: 0.85rem;
            padding: 0.65rem 0.85rem;
        }

        .form-label {
            font-size: 0.85rem;
        }

        .btn-success {
            padding: 0.65rem 1.5rem;
            font-size: 0.9rem;
            max-width: 100%;
        }
    }
</style>

<!-- Login Form -->
<div class="row mt-5 mb-5">
    <div class="col-12 col-md-8 offset-md-2 login-form-container">
        <h1>Log In</h1>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 mt-4">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" type="text" placeholder="e.g., travelLover123" class="form-control" required />
                <div class="invalid-feedback">Please enter a username.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" placeholder="Enter your password" class="form-control" required />
                <div class="invalid-feedback">Please enter a password.</div>
            </div>
            <button class="btn btn-success mt-3">Log In</button>
        </form>
    </div>
</div>
