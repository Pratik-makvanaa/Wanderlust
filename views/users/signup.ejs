        <h1>Signup on Wanderlust</h1>
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 mt-5">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" type="text" placeholder="e.g., adventureSeeker" class="form-control" required />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a username.</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="email" placeholder="e.g., user@example.com" class="form-control" required />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a valid email.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" placeholder="Enter your password" class="form-control" required />
